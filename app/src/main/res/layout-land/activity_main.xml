<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowWeight="@dimen/material_emphasis_high_type"

    android:layout_gravity="bottom"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="right|bottom"
        android:longClickable="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"

        android:gravity="center|right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Result"
        android:textColor="@color/teal_200"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/rad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="5dp"
            android:text=""
            android:textColor="@color/teal_200"
            android:textSize="15dp" />

        <Button
            android:id="@+id/up"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClickUp"
            android:text="\u21D1"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClickDelete"
            android:text="\u232B"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:columnCount="3"
            android:gravity="center">

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickRad"
                android:text="Rad"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClick2x"
                android:text="2\u02DF"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickSqrt"
                android:text="\u221A"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickSin"
                android:text="sin"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickCos"
                android:text="cos"
                android:textSize="10dp" />

            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickTg"
                android:text="tg"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickLogxY"
                android:text="log\u2093y"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickLn"
                android:text="ln"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickLg"
                android:text="lg"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickX2"
                android:text="x\u00B2"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:onClick="onClickX3"
                android:text="x\u00B3"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickXy"
                android:text="x\u02B8"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickXfac"
                android:text="x!"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickPi"
                android:text="\u03C0"
                android:textSize="10dp" />

            <Button

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickE"
                android:text="e"
                android:textSize="10dp" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:columnCount="4"
            android:gravity="center">

            <Button
                android:id="@+id/Reset"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickReset"
                android:text="C"
                android:textColor="@color/red"
                android:textSize="10dp" />

            <Button
                android:id="@+id/brackets"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickBrackets"
                android:text="()"
                android:textSize="10dp" />

            <Button
                android:id="@+id/divide"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickDivide"
                android:text="/"
                android:textSize="10dp" />

            <Button
                android:id="@+id/multiply"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"

                android:onClick="onClickMultiply"
                android:text="*"
                android:textSize="10dp" />


            <Button
                android:id="@+id/seven"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickSeven"
                android:text="7"
                android:textSize="10dp" />

            <Button
                android:id="@+id/eight"

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickEight"
                android:text="8"
                android:textSize="10dp" />

            <Button
                android:id="@+id/nine"

                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickNine"
                android:text="9"
                android:textSize="10dp" />

            <Button
                android:id="@+id/minus"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickMinus"
                android:text="-"
                android:textSize="10dp" />

            <Button
                android:id="@+id/four"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickFour"
                android:text="4"
                android:textSize="10dp" />

            <Button
                android:id="@+id/five"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickFive"
                android:text="5"
                android:textSize="10dp" />

            <Button
                android:id="@+id/six"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickSix"
                android:text="6"
                android:textSize="10dp" />


            <Button
                android:id="@+id/plus"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickPlus"
                android:text="+"
                android:textSize="10dp" />


            <Button
                android:id="@+id/one"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickOne"
                android:text="1"
                android:textSize="10dp" />

            <Button
                android:id="@+id/two"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickTwo"
                android:text="2"
                android:textSize="10dp" />

            <Button
                android:id="@+id/three"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickThree"
                android:text="3"
                android:textSize="10dp" />

            <Button
                android:id="@+id/enter"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_rowSpan="2"
                android:layout_gravity="fill"
                android:layout_margin="1dp"
                android:onClick="onClickEnter"
                android:text="="
                android:textSize="10dp" />

            <Button
                android:id="@+id/zero"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_margin="1dp"
                android:onClick="onClickZero"
                android:text="0"
                android:textSize="10dp" />


            <Button
                android:id="@+id/point"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_margin="1dp"
                android:onClick="onClickPoint"
                android:text="."
                android:textSize="10dp" />
        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>