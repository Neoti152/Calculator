<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="right|bottom"
        android:longClickable="false"
        android:padding="20dp"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="20dp"
        android:text="Result"
        android:textColor="@color/teal_200"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/Widget.Material3.Button.ElevatedButton"

            android:onClick="onClickUp"
            android:textStyle="bold"
            android:text="Up"
            android:textSize="30dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_gravity="right"

        android:onClick="onClickDelete"
        android:textStyle="bold"
        android:text="Del"
        android:textSize="30dp" />
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="fill"
        android:columnCount="4">

        <Button
            android:id="@+id/Reset"
            android:layout_margin="1dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:onClick="onClickReset"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="30dp" />

        <Button
            android:id="@+id/brackets"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickBrackets"
            android:text="()"
            android:textSize="30dp" />

        <Button
            android:id="@+id/divide"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickDivide"
            android:text="/"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiply"

            android:layout_margin="1dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:onClick="onClickMultiply"
            android:text="*"
            android:textSize="30dp" />


        <Button
            android:id="@+id/seven"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickSeven"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight"

            android:layout_margin="1dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:onClick="onClickEight"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/nine"

            android:layout_margin="1dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:onClick="onClickNine"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/minus"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickMinus"
            android:text="-"
            android:textSize="30dp" />

        <Button
            android:id="@+id/four"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickFour"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/five"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickFive"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/six"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickSix"
            android:text="6"
            android:textSize="30dp" />


        <Button
            android:id="@+id/plus"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickPlus"
            android:text="+"
            android:textSize="30dp" />


        <Button
            android:id="@+id/one"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickOne"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/two"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickTwo"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/three"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickThree"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/enter"
            android:layout_rowSpan="2"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:onClick="onClickEnter"
            android:text="="
            android:textSize="30dp" />

        <Button
            android:id="@+id/zero"
            android:layout_gravity="fill"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickZero"
            android:text="0"
            android:textSize="30dp"
            android:layout_columnSpan="2"/>


        <Button
            android:id="@+id/point"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_margin="1dp"
            android:onClick="onClickPoint"
            android:text="."
            android:textSize="30dp" />
    </GridLayout>

</LinearLayout>


