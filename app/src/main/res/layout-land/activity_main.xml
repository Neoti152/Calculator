<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_vertical"
    android:gravity="fill_vertical"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="right|bottom"
        android:longClickable="false"
        android:padding="5dp"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/result"
            android:layout_width="540dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="Result"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

        <Button
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
            android:onClick="onClickUp"
            android:textStyle="bold"
            android:text="Up"
            android:textSize="20dp" />

        <Button
            android:id="@+id/delete"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:onClick="onClickDelete"
            android:text="Del"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:columnCount="4"
        android:gravity="center"
        >

        <Button
            android:id="@+id/Reset"
            android:layout_margin="1dp"

            android:onClick="onClickReset"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="15dp" />

        <Button
            android:id="@+id/brackets"

            android:layout_margin="1dp"
            android:onClick="onClickBrackets"
            android:text="()"
            android:textSize="15dp" />

        <Button
            android:id="@+id/divide"

            android:layout_margin="1dp"
            android:onClick="onClickDivide"
            android:text="/"
            android:textSize="15dp" />

        <Button
            android:id="@+id/multiply"

            android:layout_margin="1dp"

            android:onClick="onClickMultiply"
            android:text="*"
            android:textSize="15dp" />


        <Button
            android:id="@+id/seven"

            android:layout_margin="1dp"
            android:onClick="onClickSeven"
            android:text="7"
            android:textSize="15dp" />

        <Button
            android:id="@+id/eight"

            android:layout_margin="1dp"

            android:onClick="onClickEight"
            android:text="8"
            android:textSize="15dp" />

        <Button
            android:id="@+id/nine"

            android:layout_margin="1dp"

            android:onClick="onClickNine"
            android:text="9"
            android:textSize="15dp" />

        <Button
            android:id="@+id/minus"

            android:layout_margin="1dp"
            android:onClick="onClickMinus"
            android:text="-"
            android:textSize="15dp" />

        <Button
            android:id="@+id/four"

            android:layout_margin="1dp"
            android:onClick="onClickFour"
            android:text="4"
            android:textSize="15dp" />

        <Button
            android:id="@+id/five"

            android:layout_margin="1dp"
            android:onClick="onClickFive"
            android:text="5"
            android:textSize="15dp" />

        <Button
            android:id="@+id/six"

            android:layout_margin="1dp"
            android:onClick="onClickSix"
            android:text="6"
            android:textSize="15dp" />


        <Button
            android:id="@+id/plus"

            android:layout_margin="1dp"
            android:onClick="onClickPlus"
            android:text="+"
            android:textSize="15dp" />


        <Button
            android:id="@+id/one"

            android:layout_margin="1dp"
            android:onClick="onClickOne"
            android:text="1"
            android:textSize="15dp" />

        <Button
            android:id="@+id/two"

            android:layout_margin="1dp"
            android:onClick="onClickTwo"
            android:text="2"
            android:textSize="15dp" />

        <Button
            android:id="@+id/three"

            android:layout_margin="1dp"
            android:onClick="onClickThree"
            android:text="3"
            android:textSize="15dp" />

        <Button
            android:id="@+id/enter"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:onClick="onClickEnter"
            android:text="="
            android:textSize="15dp" />

        <Button
            android:id="@+id/zero"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:onClick="onClickZero"
            android:text="0"
            android:textSize="15dp" />


        <Button
            android:id="@+id/point"

            android:layout_margin="1dp"
            android:onClick="onClickPoint"
            android:text="."
            android:textSize="15dp" />
    </GridLayout>

</LinearLayout>